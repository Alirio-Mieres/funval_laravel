{
    "openapi": "3.0.0",
    "info": {
        "title": "My First API",
        "version": "0.1"
    },
    "paths": {
        "/api/docentes": {
            "get": {
                "summary": "Mostrar docentes",
                "operationId": "e1d6c44a32425fe693e0f45a32042fca",
                "responses": {
                    "200": {
                        "description": "Mostrar todos los docentes."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            },
            "post": {
                "summary": "Crear un nuevo docente",
                "operationId": "53e428299684e81de8620e8db7bbd5e1",
                "requestBody": {
                    "description": "Datos del nuevo docente",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "firstname": {
                                        "type": "string",
                                        "example": "Juan"
                                    },
                                    "lastname": {
                                        "type": "string",
                                        "example": "Perez"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "juan@example.com"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "123-456-7890"
                                    },
                                    "birthdate": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "1994-05-16"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Docente creado exitosamente."
                    },
                    "422": {
                        "description": "Error de validación."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            }
        },
        "/api/docentes/{id}": {
            "get": {
                "summary": "Mostrar docentes por ID",
                "operationId": "c39a2fa1be9123c14de4931c51482fbb",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del docente",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Mostrar los detalles del docente por ID."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            },
            "put": {
                "summary": "Actualizar un docente por ID",
                "operationId": "9c21e18b2f7ac3fb7b7d2ad2bb2a97bd",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del docente a actualizar",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Datos del nuevo docente",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "firstname": {
                                        "type": "string",
                                        "example": "Pedro"
                                    },
                                    "lastname": {
                                        "type": "string",
                                        "example": "Perez"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "juan@example.com"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "123-456-7890"
                                    },
                                    "birthdate": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "1994-05-16"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Docente creado exitosamente."
                    },
                    "422": {
                        "description": "Error de validación."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            },
            "delete": {
                "summary": "Eliminar un docente por ID",
                "operationId": "ecd94679c1f7362874bc113b5b8a9312",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del docente a eliminar",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Docente eliminado exitosamente."
                    },
                    "404": {
                        "description": "Docente no encontrado."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            }
        }
    }
}